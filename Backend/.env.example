# Copy this file to `.env` and fill values before starting the backend
# MongoDB connection string (required)
MONGO_URI=mongodb://localhost:27017/mern_blog_db

# JWT secret (required for auth)
JWT_SECRET=supersecretjwtkey
JWT_EXPIRES_IN=7d

# Uploads directory relative to the project root
UPLOAD_DIR=uploads

# Port to run the backend on
PORT=5000
